<div class="jumbotron mt-1">
    <h1 class="display-4 text-center">Eventos Farmacia Nacional</h1>
    <br>
    <div class="container">
        {{#each eventos}}
        <div class="col-md">
            <div class="card">
                <div class="card-body">
                    <img src="{{path}}" alt="" class="card-img-top">
                    <br><br>
                    <div class="car-body">
                        <h5 class="card-title"> {{titulo}} </h5>
                        <p class="card-text"> {{descripcion}} </p>
                    </div>
                </div>        
            </div>
            <hr class="my-5">
        </div>
        {{/each}}
    </div>
</div>