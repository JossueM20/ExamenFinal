<div class="row">
    {{#each citas}}
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{evento}} 
                        <a href="/cita/edit/{{_id}}"><i class="fa-solid fa-pencil"></i></a>
                    </h4>
                    <p>{{fecha}}</p>
                    <p>{{comentario}}</p>
                    <form action="/cita/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">
                            Eliminar Cita
                        </button>
                    </form>
                </div>
            </div>
            <br><br>
        </div>
    {{/each}}
</div>