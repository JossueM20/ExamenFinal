<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Agendar Cita</h3>
        </div>
        <div class="card-body">
            <form action="/cita/new-cita" method="POST">
                <div class="form-group">
                    <select name="evento" class="form-control" required>
                        <option value="" disabled selected>Selecciona un evento</option>
                        <option value="Día de la Salud y Bienestar">Día de la Salud y Bienestar</option>
                        <option value="Charla informativa sobre medicamentos genéricos">Charla informativa sobre medicamentos genéricos</option>
                        <option value="Jornada de Vacunación">Jornada de Vacunación</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="date" id="fecha" name="fecha" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="comentario" class="form-control" placeholder="Comentario"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Agendar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    // JavaScript para bloquear las fechas pasadas
    const fechaInput = document.getElementById('fecha');
    const fechaHoy = new Date().toISOString().split('T')[0]; // Obtener la fecha actual en formato "YYYY-MM-DD"
    fechaInput.setAttribute('min', fechaHoy);
</script>