<div class="col-md-7 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Gestionar Evento</h3>
        </div>
        <div class="card-body">
            <form action="/evento/new-evento" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="input-group mb-3">
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile02">
                        <label class="custom-file-label" for="inputGroupFile02">Seleccionar Imagen</label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" name="titulo" placeholder="Título" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" placeholder="Descripción" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">
                        Subir
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>